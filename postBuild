code-server --install-extension ms-python.python
code-server --install-extension yzane.markdown-pdf
code-server --install-extension yzhang.markdown-all-in-one
code-server --install-extension fcrespo82.markdown-table-formatter
code-server --install-extension mtxr.sqltools
code-server --install-extension mtxr.sqltools-driver-pg
code-server --install-extension eamodio.gitlens
code-server --install-extension vue.volar

# Install the VS code proxy
pip install -e.

# Create work directory and switch into it
mkdir work
export CODE_WORKINGDIR=./work
echo "export CODE_WORKINGDIR=${CODE_WORKINGDIR}"       >> .bashrc

# Add additional path for tools
export PATH=$PATH:~/shared/tools
echo "export PATH=$PATH:~/shared/tools" >> .bashrc

export PATH="/opt/node-v${NODE_VERSION}/bin:${PATH}"
echo "/opt/node-v${NODE_VERSION}/bin:${PATH}" >> .bashrc

# Export KUBECONFIG variable to change the path to kubeconfig file
export KUBECONFIG=~/private/.kube/config
echo "export KUBECONFIG=~/private/.kube/config" >> .bashrc

# Install Azure CLI
pip install azure-cli

# Upgrade python packages to remove security vulnerabilities
#pip install --upgrade pip tornado certifi cryptography aiohttp pyopenssl jupyterhub setuptools

# Install and set pyvim as a git editor
#pip install pyvim
git config --global core.editor vim

# Prevent git from asking for username and pasword with each pull/push command
git config --global credential.helper store
